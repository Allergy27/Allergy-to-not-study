{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "C/C++ 编译可执行文件",
      "type": "cppbuild",
      "command": "D:\\msy64\\mingw64\\bin\\c++.exe",
      "args": [
        "-fdiagnostics-color=always",
        "-std=c++2a",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}\\build\\${fileBasenameNoExtension}.exe",
        "-fexec-charset=GBK"
      ],
      "options": {
        "cwd": "D:\\msy64\\mingw64\\bin"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build"
    },
    {
      "label": "rust_Build",
      "type": "cargo",
      "command": "build",
      "problemMatcher": [
        "$rustc"
      ],
      "group": "build",
      "options": {
        "cwd": "${fileDirname}/.."
      }
    },
    {
      "label": "python_Build",
      "type": "shell",
      "command": "echo",
      "args": [
        "Python does not require a build step."
      ],
      "problemMatcher": []
    }
  ]
}